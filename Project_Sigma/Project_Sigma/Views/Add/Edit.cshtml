@model Project_Sigma.ViewModels.PizzeEditViewModel
@{
    ViewBag.Title = "Edit Pizza";
    var photoPath = "~/Img/" + (Model.ExistImg ?? "noimg.jpg");
}
<link rel="stylesheet" href="~/css/style.css" type="text/css" />
<form asp-controller="Add" asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input type="hidden" asp-for="IdPizza" />
    <input type="hidden" asp-for="ExistImg" />
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PriceWork" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PriceWork" type="number" class="form-control" placeholder="PriceWork" />
            <span asp-validation-for="PriceWork" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Img" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Img" class="custom-file-input form-control" placeholder="Img" />
            </div>
        </div>
    </div>
    <p></p>
    <div class="form-group col-sm-4 ">
        <label class="lab-text"> Текущее изображение</label>
        <img src="@photoPath" asp-append-version="true" />
    </div>
    <p></p>
    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-action="Index" asp-controller="Add" class="btn btn-primary">Вернуться</a>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>