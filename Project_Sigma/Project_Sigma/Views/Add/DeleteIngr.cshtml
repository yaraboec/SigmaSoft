@model Project_Sigma.Models.PizzaContainIngr

@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.IdPizza)
            @Html.DisplayFor(model => model.IdIngredient)
            @Html.DisplayFor(model => model.Weight)
        </dd>
    </dl>

    <div>
        <form asp-controller="Add" asp-action="DeleteIngr" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
