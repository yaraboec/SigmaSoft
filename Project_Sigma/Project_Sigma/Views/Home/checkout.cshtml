@model Project_Sigma.Models.Cart
@{
    ViewBag.Title = "checkout";
}
<script>
    function DelProd() {
        @TempData["Card"] = null;
    }
</script>
@if (TempData["Cart"] != null)
{

    <table class="table table-responsive">

        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Итоговая цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["Cart"] as List<Project_Sigma.Models.Cart>)
            {
                <tr>
                    <td>@item.productid</td>
                    <td>@item.productname</td>
                    <td>@item.price</td>
                    <td>@item.qty</td>
                    <td>@item.bill</td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td>@TempData["total"]</td>

            </tr>
        </tfoot>

    </table>
}
else
{
    <h2 style="color:red"> Cart is empty....</h2>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Вернуться назад</a>
}

@if (TempData["Cart"] != null)
{
    @using (Html.BeginForm())
     {
    <label>Ваш уникальный номер :</label> @Html.TextBoxFor(s => s.clientid)

     <input type="submit" value="Заказать" class="btn btn-primary"/>
    }


}
