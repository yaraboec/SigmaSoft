@model Project_Sigma.Models.Client
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Client" asp-route-id="@Model.IdClient">
    <div>
        <input asp-for="IdClient" type="hidden" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Фамилия</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SurName" class="control-label">Имя</label>
        <input type="text" asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label">Отчество</label>
        <input type="text" asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Электронная почта</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number" class="control-label">Номер телефона</label>
        <input type="text" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Skidka" class="control-label">Персональная скидка</label>
        <input type="text" asp-for="Skidka" class="form-control" />
    </div>
    <p></p>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>