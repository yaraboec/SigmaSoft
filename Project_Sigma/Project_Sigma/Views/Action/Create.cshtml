@model Project_Sigma.Models.Action
@{
    ViewBag.Title = "Добавление акции";
}
<form asp-action="create" asp-controller="Action">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название акции</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PercentSkidki" class="control-label">Процент скидки</label>
        <input type="number" asp-for="PercentSkidki" class="form-control" />
        <span asp-validation-for="PercentSkidki" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BeginAction" class="control-label">Начало акции</label>
        <input type="time" asp-for="BeginAction" class="form-control" />
        <span asp-validation-for="BeginAction" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndAction" class="control-label">Конец акции</label>
        <input type="time" asp-for="EndAction" class="form-control" />
        <span asp-validation-for="EndAction" class="text-danger"></span>
    </div>
    <p></p>
    <div class="form-group">
        <input type="submit" value="Добавить акцию" class="btn btn-primary" />
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}