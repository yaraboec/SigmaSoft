@model Project_Sigma.Models.Action
@{
    ViewBag.Title = "Редактирование акции";
}
<form asp-action="Edit" asp-controller="Action" asp-route-id="@Model.IdAction">
    <div>
        <input asp-for="IdAction" type="hidden" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PercentSkidki" class="control-label">Процент скидки</label>
        <input type="number" asp-for="PercentSkidki" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BeginAction" class="control-label">Начало акции</label>
        <input type="datetime" asp-for="BeginAction" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndAction" class="control-label">Конец акции</label>
        <input type="datetime" asp-for="EndAction" class="form-control" />
    </div>
    <p></p>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
